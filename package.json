{
  "name": "@yazangineering/ralph",
  "version": "0.1.0",
  "description": "Autonomous AI coding loop CLI using Claude Code - named after Ralph Wiggum's naive, relentless persistence",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "ralph": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yazan-albaiz/ralph.git"
  },
  "bugs": {
    "url": "https://github.com/yazan-albaiz/ralph/issues"
  },
  "homepage": "https://github.com/yazan-albaiz/ralph#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "bun run src/cli.tsx",
    "build": "bun build src/cli.tsx --outdir dist --target node --external react-devtools-core",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx}' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "asciify-image": "^0.1.10",
    "beeper": "^3.0.0",
    "chalk": "^5.3.0",
    "commander": "^13.0.0",
    "image-to-ascii": "^3.3.0",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "nanoid": "^5.0.9",
    "node-notifier": "^10.0.1",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "typescript": "^5.7.3",
    "eslint": "^9.18.0",
    "@eslint/js": "^9.18.0",
    "typescript-eslint": "^8.20.0",
    "prettier": "^3.4.2",
    "@types/node-notifier": "^8.0.5",
    "ink-testing-library": "^4.0.0"
  },
  "keywords": [
    "cli",
    "ai",
    "claude",
    "autonomous",
    "coding",
    "loop",
    "ralph",
    "tui",
    "ink"
  ],
  "author": "Yazan",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
